[Unit]
Description=Service de veille technologique Python (console) - Mode continu
After=network.target

[Service]
Type=simple
User={INSTALL_USER}
WorkingDirectory={INSTALL_DIR}
ExecStart={INSTALL_DIR}/.venv/bin/python veille_service.py --continuous --interval 1 --silent
Restart=on-failure
RestartSec=60
Environment=PYTHONPATH={INSTALL_DIR}

[Install]
WantedBy=multi-user.target
